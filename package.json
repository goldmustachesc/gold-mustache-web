{
  "name": "gold-mustache-web",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack -p 3001",
    "build": "prisma generate && next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "COVERAGE_SCOPE=core pnpm exec vitest --run --coverage",
    "test:coverage:all": "COVERAGE_SCOPE=all pnpm exec vitest --run --coverage",
    "test:coverage:services": "COVERAGE_SCOPE=services pnpm exec vitest --run --coverage",
    "test:coverage:integrations": "COVERAGE_SCOPE=integrations pnpm exec vitest --run --coverage",
    "test:coverage:check": "COVERAGE_SCOPE=core COVERAGE_ENFORCE=true pnpm exec vitest --run --coverage",
    "test:coverage:services:check": "COVERAGE_SCOPE=services COVERAGE_ENFORCE=true pnpm exec vitest --run --coverage",
    "test:coverage:integrations:check": "COVERAGE_SCOPE=integrations COVERAGE_ENFORCE=true pnpm exec vitest --run --coverage",
    "test:gate": "pnpm lint && pnpm test && pnpm test:coverage:check && pnpm test:coverage:services:check",
    "test:gate:full": "pnpm test:gate && pnpm test:coverage:integrations:check",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:status": "prisma migrate status",
    "prepare": "husky",
    "postinstall": "prisma generate",
    "commit": "git-cz",
    "optimize:images": "node scripts/optimize-images.cjs"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.86.2",
    "@tanstack/react-query": "^5.90.12",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.36.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.24",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.542.0",
    "next": "15.5.9",
    "next-intl": "^4.5.0",
    "next-themes": "^0.4.6",
    "prisma": "^6.19.0",
    "qrcode.react": "^4.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.68.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jspdf": "^2.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "4.0.16",
    "commitizen": "^4.3.1",
    "fast-check": "^4.3.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "vitest": "4.0.16"
  },
  "pnpm": {
    "overrides": {
      "js-yaml": ">=4.1.1",
      "tmp": ">=0.2.4"
    }
  }
}
